{
	"compilerOptions": {
		"noEmit": true,
		"isolatedModules": true,
		"strict": true,
		"sourceMap": true,
		"jsx": "preserve",
		"target": "esnext",
		"module": "esnext",
		"lib": ["esnext", "dom"],
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"types": ["vite/client", "node"],
		"plugins": [{ "name": "@vuedx/typescript-plugin-vue" }],
		"allowSyntheticDefaultImports": true
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.d.ts",
		"src/**/*.tsx",
		"src/**/*.vue",
		"src/lib/sanity.js",
		"src/firebase.js"
	],
	"ignore": ["node_modules/**/*.*"]
}
